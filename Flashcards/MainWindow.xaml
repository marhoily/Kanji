<reactiveui:ReactiveWindow 
    x:Class="WpfApp1.MainWindow"
    x:TypeArguments="wpfApp1:AppViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveui="http://reactiveui.net"
    xmlns:wpfApp1="clr-namespace:WpfApp1"
    Title="NuGet Browser" Height="450" Width="800"
    mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="96" FontWeight="SemiBold" 
                    Grid.Row="1" Grid.Column="1"
                   Grid.ColumnSpan="3"
                   FontFamily="-Chihaya Jyun"
                       HorizontalAlignment="Center"
                   Margin="20"
                    VerticalAlignment="Top"
                       x:Name="Kanji"/>
        
        <TextBlock FontSize="24" FontWeight="SemiBold" 
                   Margin="20" Foreground="DeepPink"
                    Grid.Row="2" Grid.Column="1"
                   FontFamily="Hosofuwafont" Grid.ColumnSpan="3"
                       HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                       x:Name="Pronounciation"/>
        <TextBlock FontSize="32" FontWeight="SemiBold" 
                    Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                   TextWrapping="Wrap"
                   Margin="20"
                   FontFamily="-DartsFont"
                       HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                       x:Name="Meaning"/>
        <Button x:Name="MoveNext" Content="MoveNext" Margin="5"
                    Padding="30,5"
                    Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"
                    VerticalAlignment="Top"
                    FontSize="20"
                    HorizontalAlignment="Center"></Button>
     <TextBlock FontSize="48" FontWeight="SemiBold" 
                   Margin="20" Foreground="DarkBlue"
                    Grid.Row="5" Grid.Column="1"
                       HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                       x:Name="PreviousTerm"/>   
     <TextBlock FontSize="24" FontWeight="SemiBold" 
                   Margin="20" Foreground="DarkBlue"
                    Grid.Row="5" Grid.Column="2"
                       HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                       x:Name="CurrentIndex"/>   
    </Grid>
</reactiveui:ReactiveWindow>
    









